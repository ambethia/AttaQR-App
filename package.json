{
  "name": "attaqr",
  "productName": "attaqr",
  "version": "2.0.2",
  "description": "Combat Assistant",
  "repository": "https://github.com/ambethia/attaqr",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "rebuild": "electron-rebuild -w attaqr",
    "icon-gen": "electron-icon-builder -f --input=./res/icon.png --output=./res"
  },
  "author": {
    "name": "Jason L Perry",
    "email": "jason@suncoast.io"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./res/icons/icon",
        "name": "AttaQR"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "attaqr"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO"
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "ambethia",
              "name": "AttaQR-App"
            }
          }
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "gypfile": true,
  "dependencies": {
    "@paulmillr/qr": "^0.1.1",
    "bindings": "^1.5.0",
    "electron-active-window": "^0.0.6",
    "electron-squirrel-startup": "^1.0.0",
    "node-addon-api": "^8.0.0",
    "xstate": "^5.12.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4",
    "@electron-forge/maker-dmg": "^7.4",
    "@electron-forge/maker-squirrel": "^7.4",
    "@electron-forge/publisher-github": "^7.4",
    "electron": "^30.0.1",
    "electron-icon-builder": "^2.0.1",
    "qrcode": "^1.4.4"
  }
}
